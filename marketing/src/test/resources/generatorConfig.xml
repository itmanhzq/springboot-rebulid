<!DOCTYPE generatorConfiguration
    PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!--suppress MybatisGenerateCustomPluginInspection -->
<generatorConfiguration>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.fenlibao.common.core.BaseMapper"/>
            <property name="caseSensitive" value="true"/>
        </plugin>

       <plugin type="com.fenlibao.marketing.mapper.config.LombokConfig" >
            <property name="hasLombok" value="true"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.40.239:3306/v2_marketing?characterEncoding=utf8"
                        userId="root" password="fenlibao.123">
        </jdbcConnection>

        <!--MyBatis 生成器只需要生成 Model-->
        <javaModelGenerator targetPackage="com.fenlibao.marketing.model.po"
                            targetProject="src/main/java">
            <property name="rootClass" value="com.fenlibao.base.po.BasePO"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources/com/fenlibao/marketing"/>

        <javaClientGenerator targetPackage="com.fenlibao.marketing.mapper"
                             targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="publicize_article" domainObjectName="ArticlePO"/>
        <table tableName="publicize_content" domainObjectName="ContentPO"/>
        <table tableName="publicize_friend_link" domainObjectName="FriendLinkPO"/>
        <table tableName="publicize_post" domainObjectName="PostPO"/>
        </context>
</generatorConfiguration>